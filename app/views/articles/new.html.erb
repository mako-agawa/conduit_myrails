<div class="editor-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-xs-12">
        <%= form_with model:@article do |form| %>
    <div  class="form-group">
        <%= form.text_field :title,  class: "form-control form-control-lg",  placeholder:"Article Title" %>

    </div >
    <div  class="form-group">
        <%= form.text_field :subtitle, class: "form-control", placeholder:"What's this article about?" %>
    </div>

    <div  class="form-group">
        <%= form.text_area :body, class: "form-control", rows:"8",placeholder:"Write your article (in markdown)" %>
  
    </div>
    <div  class="form-group">
        <%= form.text_field :tag, class:"form-control", placeholder:"Enter tags" %>
        <div class="tag-list">
        <span class="tag-default tag-pill"> <i class="ion-close-round"></i> tag </span>
        </div>
    </div> 
       <div  class="form-group">
        <%= form.text_field :user_id, class: "form-control", placeholder:"input user_id" %>
  
    </div>           


        <%= form.submit class: "btn  btn-lg pull-xs-right btn-primary", style:"border: none;" %>



<% end %>

        
      </div>
    </div>
  </div>
</div>