<div class="auth-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Sign up</h1>
        <p class="text-xs-center">
          <a href="/login">Have an account?</a>
        </p>

        <ul class="error-messages">
          <li>That email is already taken</li>
        </ul>
              <%= form_with(model: @user) do |f| %>
<%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.email_field :name, class: "form-control form-control-lg" , placeholder: "Name" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control form-control-lg" , placeholder: "Email" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control form-control-lg" , placeholder: "Password" %>

      <%= f.submit "Create my account", class: "btn btn-lg btn-primary pull-xs-right" %>
    <% end %>
    
      </div>
    </div>
  </div>
</div>